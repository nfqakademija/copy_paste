{% extends 'base-login.html.twig' %}

{% block page_content %}
    {% if error is defined and error %}
        <span>{{ error }}</span>
    {% endif %}
    {# todo: normalios formos#}
    <body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-box-body">
            <p class="login-box-msg">Priminti slaptažodį</p>

            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST"
                  class="fos_user_registration_register">

                <div class="form-group has-feedback">

                    <input class="form-control" type="text" name="username" required="required"
                           placeholder="Prisijungimo vardas">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>

                <input class="btn btn-primary btn-block btn-flat" type="submit" value="Patvirtinti"/>
            </form>
        </div>
    </div>
    </body>

{% endblock page_content %}
