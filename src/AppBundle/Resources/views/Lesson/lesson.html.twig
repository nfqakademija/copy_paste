{% extends '::base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block page_title %}{{ title }}{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
    <div class="box">
        <div class="box-header with-border">
            <div class="btn-grp">
                {% if prevLesson != null %}
                    <a href="{{ path('lesson', { 'Lesson': prevLesson.id }) }}" class="btn btn-default"><i class="fa fa-arrow-left"></i></a>
                {% endif %}
                <h3 class="box-title inline">{{ lesson.startTime|date('H:i') }} - {{ lesson.classInfo.name }}</h3>
                {% if nextLesson != null %}
                    <a href="{{ path('lesson', { 'Lesson': nextLesson.id }) }}" class="btn btn-default"><i class="fa fa-arrow-right"></i></a>
                {% endif %}
            </div>
        </div>
        <div class="box-body">
            {% include 'AppBundle:Lesson:view.inc.html.twig' %}
        </div>
    </div>
{% endblock %}
