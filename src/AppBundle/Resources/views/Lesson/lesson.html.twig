{% extends '@App/layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block page_title %}{{ title }}{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
    <div class="box">
        <div class="box-header with-border">
            <div class="btn-grp box-tools pull-left" style="position: static">
                {% if prevLesson != false %}
                    <a href="{{ path('lesson', { 'id': prevLesson.id }) }}" class="btn btn-default"><i class="fa fa-arrow-left"></i></a>
                {% endif %}
                <h3 class="box-title inline">{{ lesson.startTime|date('H:i') }} - {{ lesson.classInfo.name }}</h3>
                {% if nextLesson != false %}
                    <a href="{{ path('lesson', { 'id': nextLesson.id }) }}" class="btn btn-default"><i class="fa fa-arrow-right"></i></a>
                {% endif %}
            </div>
            <div class="box-tools pull-right" style="position: static">
                <select class="activity-select">
                    <option class="select-default"selected disabled>Pasirinkite rungtÄ¯</option>
                    {% for activity in activities %}
                        <option data-activityId="{{ activity.id }}">{{ activity.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="box-body no-padding">
            {% include 'AppBundle:Lesson:view.inc.html.twig' %}
        </div>
    </div>
    <div id='result-insert-alert' class="alert alert-success no-margin hidden" role="alert"></div>
{% endblock %}

{% block avanzu_admin_footer %}
{% endblock %}
