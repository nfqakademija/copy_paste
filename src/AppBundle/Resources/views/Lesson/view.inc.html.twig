<ul class="list-group no-margin student-list-group hidden">
	{% for student in students %}
		<li class="list-group-item">
			<div class="container-fluid">
				<div class="col-xs-6">
					<div class="row">
						<a href="{{ path('profile', {'studentInfo': student.id}) }}">{{ loop.index }}. {{ student.name }}</a>
					</div>
					{% for activity in activities %}
						<div class="row activity-change hidden" data-activityId="{{ activity.id }}">
							Paskutinis rezultatas:
							{% if results[student.id][activity.id] is defined %}
								{{ results[student.id][activity.id] }}
							{% else %}
								nėra
							{% endif %}
						</div>
					{% endfor %}
				</div>
				<div class="col-xs-6">
					<div class="row">
						{{ form_start(formList[student.id], {attr: {class: 'ajaxForm'}}) }}
						<div class="input-group result-input pull-right">
							{{ form_widget(formList[student.id].value) }}
							{{ form_widget(formList[student.id].activityId, {attr: {class: 'result-activityId'}}) }}
							{{ form_widget(formList[student.id].studentInfoId, {value: student.id }) }}
							<span class="input-group-btn">
					            <button class="btn btn-default" type="submit">Įrašyti</button>
							</span>
						</div>
						{{ form_end(formList[student.id]) }}
					</div>
				</div>
			</div>
		</li>
	{% endfor %}
</ul>
