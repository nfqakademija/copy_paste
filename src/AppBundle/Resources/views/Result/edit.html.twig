{{ form_start(form) }}
<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title">Rezultato redagavimas</h4>
</div>
<div class="modal-body">

	<div class="form-group">
		<label>Rungtis</label>
		{{ form_widget(form.activity, {attr: {'class': 'form-control'}}) }}
	</div>
	<div class="form-group">
		<label>Mokinys</label>
		{{ form_widget(form.studentInfo, {attr: {'class': 'form-control'}}) }}
	</div>
	<div class="form-group">
		<label>Rezultatas</label>
		{{ form_widget(form.value, {attr: {'class': 'form-control'}}) }}
	</div>

</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Atšaukti</button>
	<button type="submit" class="btn btn-success">Išsaugoti pakeitimus</button>
</div>
{{ form_end(form) }}