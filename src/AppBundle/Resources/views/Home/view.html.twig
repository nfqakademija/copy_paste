{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

{% block title %}KKnyga{% endblock %}

{% block page_title %}{% endblock %}
{% block page_subtitle %}{% endblock %}
{#TODO: title and navigation#}

{% block page_content %}
<div class="container-fluid">
	<div class="box box-default">
		<div class="box-header with-border">
			<h3 class="box-title">Rezultatų įvedimas</h3>
			<div class="box-tools pull-right" style="position: static">
                <select class="activity-select">
                        <option selected disabled>Pasirinkite rungtį</option>
                        {% for activity in activities %}
                                <option data-activityId="{{ activity.id }}">{{ activity.name }}</option>
                        {% endfor %}
                </select>
			</div>
		</div>
		<div class="box-body">
			{{ form_start(form) }}
			{{ form_widget(form.activity) }}
			<ul class="list-group hidden student-list">
				{% for student in students %}
					<li class="list-group-item">
						<div class="container-fluid">
							<div class="col-xs-9">
								<div class="row">
									<a href="{{ path('profile', {'studentInfo': student.id}) }}">{{ loop.index }}. {{ student.name }}</a>
								</div>
								{% for activity in activities %}
									<div class="row activity-change hidden" data-activityId="{{ activity.id }}">
										Paskutinis rezultatas:
										{% if results[student.id][activity.id] is defined %}
											{{ results[student.id][activity.id] }}
										{% else %}
											nėra
										{% endif %}
									</div>
								{% endfor %}
							</div>
							<div class="col-xs-3">
								{{ form_widget(form["student_" ~ student.id]) }}
							</div>
						</div>
					</li>
				{% endfor %}
				<li class="list-group-item"><input type="submit" value="Įrašyti" class="btn btn-default btn-block" /></li>
			</ul>
			{{ form_end(form) }}
		</div><!-- /.box-body -->
	</div><!-- /.box -->




</div>

{% endblock %}

{% block avanzu_admin_footer %}
{% endblock %}

{% block javascripts %}
	    {{ parent() }}
        {% javascripts '@AppBundle/Resources/scripts/main.js' %}
                <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
{% endblock %}
