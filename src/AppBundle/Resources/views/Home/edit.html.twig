{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

{% block title %}KKnyga{% endblock %}

{% block page_title %}{% endblock %}
{% block page_subtitle %}{% endblock %}
{#TODO: title and navigation#}

{% block page_content %}
<div class="container-fluid">
	<div class="box box-default">
		<div class="box-header with-border">
			<h3 class="box-title">Rezultatų įvedimas</h3>
			<div class="box-tools pull-right" style="position: static">
				<div class="dropdown">
					<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
						Pasirinkite rungtį
						<span class="caret"></span>
					</button>
					<ul class="dropdown-menu">
						{% for activity in activities %}
							<li><a href="#" class="activity" data-activityId="{{ activity.id }}">{{ activity.name }}</a></li>
						{% endfor %}
					</ul>
				</div>
			</div><!-- /.box-tools -->
		</div><!-- /.box-header -->
		<div class="box-body">
			{% for activity in activities %}
				<ul class="list-group student-list" data-activityId="{{ activity.id }}" style="display: none">
					{% for student in students %}
						<li class="list-group-item">
							<div class="container-fluid">
								<div class="col-xs-9">
									<div class="row">
										<a href="profile/{{ student.id }}">{{ loop.index }}. {{ student.name }}</a>
									</div>
									<div class="row">
										Paskutinis rezultatas:
										{% for result in results if result.activity.id == activity.id and result.studentInfo.id == student.id %}
											{{ result.value }}
										{% else %}
											nėra
										{% endfor %}
									</div>
								</div>
								<div class="col-xs-3">
									{#TODO: input#}
								</div>
							</div>
						</li>
					{% endfor %}
				</ul>
			{% endfor %}
		</div><!-- /.box-body -->
	</div><!-- /.box -->




</div>

{% endblock %}

{% block avanzu_admin_footer %}
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('bundles/avanzuadmintheme/static/'~app.environment~'/scripts/admin-lte-all.js') }}"></script>
	<script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
